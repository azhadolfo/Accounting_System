@model IEnumerable<Accounting_System.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Master File</h1>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-3">Create New</a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr class="text-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Terms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessStyle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
